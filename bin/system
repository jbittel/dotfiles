#!/usr/bin/env bash
#
# Invoke system-level actions.
#
set -o errexit
set -o nounset
set -o pipefail

case "$1" in
    lock)
        swaylock -f -c 556873
        ;;
    suspend)
        swaylock -f -c 556873 && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|suspend|reboot|shutdown}"
        exit 1
esac

exit 0
